{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": [
            "es2017"
        ],
        "types": [
            "react-native",
            "jest"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@Components/*": [
                "components/*"
            ],
            "@Pages/*": [
                "pages/*"
            ],
            "@Assets/*": [
                "assets/*"
            ],
            "@Styles/*": [
                "styles/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "metro.config.js",
        "jest.config.js"
    ],
    "extends": "expo/tsconfig.base"
}